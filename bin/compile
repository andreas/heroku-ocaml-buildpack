#!/usr/bin/env bash

BUILD_DIR=$1
CACHE_DIR=$2

export OPAMYES=1

indent() {
  sed -u 's/^/       /'
}

if [ ! -f $CACHE_DIR/ocamlbrew/ocaml-4.03.0/etc/ocamlbrew.bashrc ]; then
	echo "-----> Setup Ocamlbrew"
	curl -kL https://raw.github.com/hcarty/ocamlbrew/master/ocamlbrew-install | env OCAMLBREW_FLAGS="-v 4.03.0 -b $CACHE_DIR/ocamlbrew -r" bash
fi

cd $CACHE_DIR
if [ ! -f cudf_remote_proxy ]; then
	echo "-----> wget cudf"
	wget http://cudf-solvers.irill.org/cudf_remote_proxy
	chmod +x cudf_remote_proxy
fi

echo "-----> Setup cudf"
export OPAMEXTERNALSOLVER=$CACHE_DIR/cudf_remote_proxy

echo "-----> Source Ocamlbrew"
source $CACHE_DIR/ocamlbrew/ocaml-4.03.0/etc/ocamlbrew.bashrc

echo "-----> Opam switch"
opam switch 4.03.0
eval `opam config env`
opam update
opam upgrade

cd $BUILD_DIR
echo "-----> install dependencies"
opam pin add my_app . -n
opam install my_app --deps-only
echo "-----> make"
make all 2>&1 | indent
